{
  "productName": "Switch CC",
  "version": "1.0.0",
  "identifier": "com.edison.switch-cc",
  "build": {
    "beforeBuildCommand": "pnpm build:renderer",
    "beforeDevCommand": "pnpm dev:renderer",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Claude Config 供应商切换工具",
    "longDescription": "一个专注于 Claude Code 配置管理和快速切换的桌面应用",
    "publisher": "Edison",
    "copyright": "Copyright © 2024 Edison. All rights reserved.",
    "licenseFile": "../LICENSE",
    "externalBin": [],
    "createUpdaterArtifacts": false,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "nsis": {
        "installMode": "perMachine",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "allowDowngrades": false,
        "displayLanguageSelector": false,
        "deleteAppDataOnUninstall": false,
        "runAfterFinish": true
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": null,
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "appCategory": "public.app-category.developer-tools",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}